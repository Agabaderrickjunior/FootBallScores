<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- Empty TextView-->
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_list_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/empty_text_viewPadding"
        android:paddingLeft="@dimen/empty_text_viewPadding"
        android:paddingRight="@dimen/empty_text_viewPadding"
        android:paddingTop="@dimen/empty_text_viewPadding"
        android:text="@string/empty_scores_list"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/apptheme_primary_text_black"

        >

    </TextView>

    <Button
        android:id="@+id/empty_list_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:onClick="onRefresh"
        android:paddingBottom="@dimen/empty_text_viewPadding"
        android:paddingLeft="@dimen/empty_text_viewPadding"
        android:paddingRight="@dimen/empty_text_viewPadding"
        android:paddingTop="@dimen/empty_text_viewPadding"
        android:text="@string/button_text"
        android:textColor="@color/apptheme_primary_text_black"
        android:contentDescription="@string/button_text"/>
</LinearLayout>
